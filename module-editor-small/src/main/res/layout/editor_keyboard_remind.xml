<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/dialog_add_task_select_sv_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/master_background">

  <LinearLayout style="@style/new_alarm_clcok_item_llyt">

    <LinearLayout
      android:id="@+id/RadioLayoutGroup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/no_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@drawable/bg_range_type"
        android:text="不提醒"
        android:textSize="12.5sp" />

      <TextView
        android:id="@+id/remind0min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@drawable/bg_range_type"
        android:text="开始时"
        android:textSize="12.5sp" />

      <TextView
        android:id="@+id/remind5min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@drawable/bg_range_type"
        android:text="开始前5分钟"
        android:textSize="12.5sp" />
    </LinearLayout>

    <View style="@style/divider_line"/>

    <TextView
      android:id="@+id/dialog_add_task_select_tv_remain_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="不提醒"
      android:textColor="@android:color/darker_gray"
      android:textSize="16sp"/>

    <View style="@style/divider_line"/>

    <LinearLayout
      android:id="@+id/ring_llyt"
      style="@style/new_alarm_clcok_item"
      android:layout_marginLeft="13dp"
      android:layout_marginRight="13dp"
      android:background="@drawable/bg_record_operate_item">

      <TextView
        style="@style/new_alarm_clcok_item_type"
        android:layout_marginLeft="6dp"
        android:text="@string/ring"/>

      <TextView
        android:id="@+id/ring_describe"
        style="@style/new_alarm_clcok_item_describe"
        android:layout_marginRight="6dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_more_arrow_dark"
        android:ellipsize="end"
        android:maxWidth="230dp"
        android:singleLine="true"
        android:text="@string/default_ring"/>
    </LinearLayout>

    <View style="@style/divider_line"/>

    <LinearLayout style="@style/new_alarm_clcok_item">

      <TextView
        style="@style/new_alarm_clcok_item_type"
        android:text="@string/volume"/>

      <SeekBar
        android:id="@+id/volumn_sk"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:max="15"
        android:maxHeight="12dp"
        android:minHeight="8dp"
        android:progressDrawable="@drawable/seekbar_define_color_style"
        android:thumb="@drawable/seekbar_thumb"/>
    </LinearLayout>

    <View style="@style/divider_line"/>

    <LinearLayout style="@style/new_alarm_clcok_item">

      <TextView
        style="@style/new_alarm_clcok_item_type"
        android:text="@string/vibrate"/>

      <ToggleButton
        android:id="@+id/vibrate_btn"
        style="@style/new_alarm_clcok_item_toggle_btn">
      </ToggleButton>
    </LinearLayout>

    <View style="@style/divider_line"/>

    <LinearLayout
      android:id="@+id/nap_llyt"
      style="@style/new_alarm_clcok_item"
      android:layout_marginLeft="13dp"
      android:layout_marginRight="13dp"
      android:background="@drawable/bg_record_operate_item">

      <TextView
        style="@style/new_alarm_clcok_item_type"
        android:layout_marginLeft="6dp"
        android:text="@string/nap"/>

      <ToggleButton
        android:id="@+id/nap_btn"
        style="@style/new_alarm_clcok_item_toggle_btn"
        android:layout_marginRight="5dp">
      </ToggleButton>
    </LinearLayout>

  </LinearLayout>


</ScrollView>