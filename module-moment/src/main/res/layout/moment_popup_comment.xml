<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/comment_popup_contianer"
  android:layout_width="180dp"
  android:layout_height="wrap_content"
  android:background="@drawable/moment_bg_comment_popup"
  android:clipChildren="false"
  android:orientation="horizontal"
  android:weightSum="2"
  >

  <RelativeLayout
    android:id="@+id/item_like"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="8dp"
    android:background="@drawable/moment_bg_comment_popup_left"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    >

    <TextView
      android:id="@+id/tv_like"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:drawablePadding="5dp"
      android:text="赞"
      android:textColor="@color/comment_popup_tx_bg"
      android:textSize="@dimen/moment_normal_font"
      />

    <ImageView
      android:id="@+id/iv_like_blue"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginRight="5dp"
      android:layout_centerInParent="true"
      android:layout_toLeftOf="@id/tv_like"
      android:alpha="0"
      android:src="@drawable/moment_ic_like_blue"
      />

    <ImageView
      android:id="@+id/iv_like"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginRight="5dp"
      android:layout_centerInParent="true"
      android:layout_toLeftOf="@id/tv_like"
      android:src="@drawable/moment_ic_like"
      />

  </RelativeLayout>

  <View
    android:id="@+id/v_line"
    android:layout_width="0.5dp"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="center_vertical"
    android:background="#3B3F42"
    />

  <LinearLayout
    android:id="@+id/item_comment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="8dp"
    android:background="@drawable/moment_bg_comment_popup_right"
    >
    <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginRight="5dp"
      android:layout_gravity="center_vertical"
      android:src="@drawable/moment_ic_comment"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:drawablePadding="5dp"
      android:text="评论"
      android:textColor="@color/comment_popup_tx_bg"
      android:textSize="@dimen/moment_normal_font"
      />
  </LinearLayout>
</LinearLayout>
