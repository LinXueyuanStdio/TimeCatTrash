<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#a0000000"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:overScrollMode="always"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewNotificationButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/calculator"/>

        <ImageView
            android:id="@+id/imageViewNotificationButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/notes"/>

        <ImageView
            android:id="@+id/imageViewNotificationButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/paint"/>

        <ImageView
            android:id="@+id/imageViewNotificationButton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/player"/>

        <ImageView
            android:id="@+id/imageViewNotificationButton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/browser"/>

        <ImageView
            android:id="@+id/imageViewNotificationButton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/camera"/>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorAccent"
            android:text=""/>

        <ImageView
            android:id="@+id/imageViewNotificationButtonMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_ripple_dark"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/more"/>
    </LinearLayout>
</LinearLayout>
