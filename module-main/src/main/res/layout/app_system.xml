<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 B/s"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:textColor="@color/white_trans90"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 B/s"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:textColor="@color/white_trans90"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not connected"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:textColor="@color/white_trans90"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internal Storage"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewInternalStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:textColor="@color/white_trans90"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="External Storage"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewExternalStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                android:textColor="@color/white_trans90"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RAM Usage"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewRAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 MB / 0 MB"
                android:textColor="@color/white_trans90"
                android:textSize="12sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
